{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "consistent-return": "off",
    "no-underscore-dangle": ["error", { "allow": ["_"] }],
    "max-len": ["error", { "code": 120, "ignoreComments": true }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "func-names": "off",
    "prefer-arrow-callback": "off"
  }
}
